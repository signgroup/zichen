/* miniprogram/pageHome/family/index.wxss */
.familly{
     width: 100%;
     height: 100vh;
     padding: 30rpx;
     animation: flb 5s ease-in-out infinite;
}
@keyframes flb{
     0%,100%{
         opacity: 1;
     }
     50%{
          opacity: .8;
     }
}

.info-box{
     display: flex;
}
.mark{
     width: 12rpx;
     height: 44rpx;
     background-image: linear-gradient(to right bottom, #d16ba5, #c777b9, #ba83ca, #aa8fd8, #9a9ae1, #8aa7ec, #79b3f4, #69bff8, #52cffe, #41dfff, #46eefa, #5ffbf1);
     border-radius: 10rpx;
}
.info-box text{
     font-size: 36rpx;
     margin-left: 20rpx;
}
.contact-list{
     margin-top: 10rpx;
     padding-left:32rpx;
}
.contact-item{
     display: flex;
     margin-bottom: 20rpx;
}
.contact-title{
     margin-right: 10rpx;
}

.contact-content{
     flex: 1;
}
movable-area{
     position:fixed;
     width: 100%;
     height: 100%;
}
movable-view{
    transition: all 300ms cubic-bezier(0.23, 1, 0.32, 1);
    box-shadow: 0 15px 25px -4px rgba(0, 0, 0, 0.5), inset 0 -3px 4px -1px rgba(0, 0, 0, 0.2), 0 -10px 15px -1px rgba(255, 255, 255, 0.6), inset 0 3px 4px -1px rgba(255, 255, 255, 0.2), inset 0 0 5px 1px rgba(255, 255, 255, 0.8), inset 0 20px 30px 0 rgba(255, 255, 255, 0.2);
    border-radius: 96.32px;
    background: #ccd0d4;
    height:100rpx;
    width: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.movable-image{
     width: 50%;
     height: 50%;
}