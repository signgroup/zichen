/* pages/mine/index.wxss */
.screen {
  background: linear-gradient(#A1E5E5, #1987AA);
  width: 100%;
  height: 100vh;
  color: #fff;
  background-size: 200% 100%;
  overflow: hidden;
  position: relative;
}


.head-bg-box {
  width: 100%;
  margin: 0 auto;
  position: relative;
  height: 420rpx;
  overflow: hidden;
}

.head-bg {
  width: 110%;
  height: 400rpx;
  position: absolute;
  top: 0;
  left: -5%;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
  overflow: hidden;
  opacity: .5;
  background-image: linear-gradient(to right top, #d16ba5, #c777b9, #ba83ca, #aa8fd8, #9a9ae1, #8aa7ec, #79b3f4, #69bff8, #52cffe, #41dfff, #46eefa, #5ffbf1);
}

.login-box {
  width: 90%;
  height: 260rpx;
  position: absolute;
  left: 5%;
  top: 150rpx;
  background: #fff;
  box-shadow: 2rpx 2rpx 10rpx rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-radius: 10rpx;
}

.login-box .sign {
  position: absolute;
  right: 0;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: linear-gradient(90deg, #ff9700, #ed1c24);
  border-radius: 30rpx 0 0 30rpx;
  color: #fff;
  margin-top: 4rpx;
  transform: translateX(120px);
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}

.sign-icon {
  width: 40rpx;
  height: 40rpx;
  background: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
}

.head-portrait {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: relative;
}

.head-portrait button {
  display: inline-block;
}

.head-portrait image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.nickname {
  color: #000;
  margin-top: 20rpx;
}

.head-portrait .userinfo-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-size: cover;
  background-color: transparent;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);

}

.circle {
  width: 50px;
  height: 50px;
  background: none;
  border-radius: 50%;
  animation: circle 30s linear infinite alternate;
  position: fixed;
  top: 0;
}

@keyframes circle {
  0% {
    box-shadow: rgba(255, 255, 255, 0.1) 10px 25px, rgba(255, 255, 255, .1) 120px 275px 0 12px, rgba(255, 255, 255, 0) 60px 355px 0 23px, rgba(255, 255, 255, 0.1) 230px 445px 0 -8px, rgba(255, 255, 255, 0.1) 60px 125px, rgba(255, 255, 255, 0.1) 260px 145px 0 12px, rgba(255, 255, 255, 0.1) 100px 245px 0 23px, rgba(255, 255, 255, 0.1) 100px 85px 0 -8px, rgba(255, 255, 255, 0.1) 350px 555px, rgba(255, 255, 255, 0.1) 350px 273px 0 -2px, rgba(255, 255, 255, 0.1) 150px 355px 0 23px;
  }

  100% {
    box-shadow: rgba(255, 255, 255, 0.1) 70px 10px, rgba(255, 255, 255, 0.1) 300px 205px 0 0px, rgba(255, 255, 255, 0.1) 0px 155px 0 100rpx, rgba(255, 255, 255, 0) 330px 45px 0 -8px, rgba(255, 255, 255, 0.1) 460px 325px, rgba(255, 255, 255, 0.1) 0px 445px 0 12px, rgba(255, 255, 255, 0.1) 300px 145px 0 23px, rgba(255, 255, 255, 0.1) 100px 85px 0 -8px, rgba(255, 255, 255, 0.1) 50px 155px, rgba(255, 255, 255, 0.1) 150px 273px 0 -2px, rgba(255, 255, 255, 0.1) 0px 555px 0 63px;
  }
}

.card-menu {
  overflow: hidden;
  border-radius: 20rpx;
  margin:30rpx;

}

.menu-item {
  position: relative;
  display: flex;
  padding: 0 40rpx;
  min-height: 100rpx;
  background-color: rgba(255, 255, 255, 1);
  justify-content: space-between;
  align-items: center;
  transition: all .6s ease-in-out 0s;
  transform: translateX(0rpx);
  position: relative;
  border-bottom: 1rpx solid #eee;
}
.menu-item:last-child{
  border-bottom: 0;

}

.menu-item.arrow::after {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  content: '';
  display: block;
  width: 7px;
  height: 7px;
  border-top: 2px solid #8799a3;
  border-right: 2px solid #8799a3;
  transform: rotate(45deg);
}

.menu-item .content {
  font-size: 30rpx;
  line-height: 1.6em;
  flex: 1;
  color: #8799a3;

}
.content image{
  width:30rpx;
  height: 30rpx;
  margin-right: 20rpx;
  position: relative;
  top: 3rpx;
}

.item-right{
  float: right;

}
.item-right image{
  border-radius: 50%;
  margin-right: 10rpx;
}